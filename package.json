{
  "name": "portal-universal-boilerplate",
  "version": "0.0.1",
  "repository": "https://github.com/mediba-system/ono-universal-sample",
  "license": "MIT",
  "scripts": {
    "start:dev": "cd src; ../node_modules/.bin/next",
    "build:dev": "../node_modules/.bin/next build",
    "build": "NODE_ENV=production ../node_modules/.bin/next build",
    "export": "../node_modules/.bin/next export",
    "analyze": "NODE_ENV=production ANALYZE=true ../node_modules/.bin/next build",
    "start": "../node_modules/.bin/next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/config": "0.0.34",
    "classnames": "^2.2.5",
    "config": "^1.30.0",
    "moment": "^2.21.0",
    "mysql": "^2.15.0",
    "next": "^5.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.2.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-persist": "^4.9.1",
    "redux-thunk": "^2.2.0",
    "reflect-metadata": "^0.1.12",
    "rrr-lazy": "^2.0.0",
    "typeorm": "^0.1.19"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.15",
    "@storybook/addon-links": "^3.3.15",
    "@storybook/addons": "^3.3.15",
    "@storybook/react": "^3.3.15",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.2",
    "@types/node": "^8.0.26",
    "@types/react": "^16.0.41",
    "@types/react-ga": "^2.1.1",
    "@types/react-redux": "^5.0.15",
    "@types/redux-persist": "^4.3.1",
    "@zeit/next-css": "^0.1.5",
    "@zeit/next-typescript": "0.0.11",
    "babel-plugin-transform-define": "^1.3.0",
    "create-next-app": "^0.5.2",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-to-react-components": "^1.6.3",
    "jest": "^22.4.3",
    "nextjs-export-path-map": "^0.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.1.3",
    "postcss-nested": "^2.1.2",
    "redux-logger": "^3.0.6",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2",
    "webpack-bundle-analyzer": "^2.11.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true,
        "tsConfigFile": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "enzyme.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/enzyme.js",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
